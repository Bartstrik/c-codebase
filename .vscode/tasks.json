{
    "tasks": [
        {
            "type": "process",
            "label": "build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/editor/editor.c",
                "${workspaceFolder}/src/editor/helper_files/file_handler.c",
                "${workspaceFolder}/src/editor/helper_files/renderer.c",
                "${workspaceFolder}/src/editor/helper_files/terminal.c",
                "${workspaceFolder}/src/base/uinput.c",
                "${workspaceFolder}/src/base/str.c",
                "-o",
                "${workspaceFolder}/src/editor/editor.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}